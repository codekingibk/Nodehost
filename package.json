{
  "name": "nodehost",
  "version": "1.0.0",
  "description": "Node.js WhatsApp Bot Manager for Render Free Tier",
  "main": "server/index.js",
  "scripts": {
    "build": "cd client && npm install && npm run build && cd ..",
    "start": "node server/index.js",
    "dev": "concurrently \"npm run server-dev\" \"npm run client-dev\"",
    "server-dev": "nodemon server/index.js",
    "client-dev": "cd client && npm run dev",
    "render-build": "npm install && cd client && npm install && npm run build"
  },
  "dependencies": {
    "@clerk/clerk-sdk-node": "^4.12.5",
    "archiver": "^7.0.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "mongoose": "^7.5.0",
    "multer": "^2.0.2",
    "node-pty": "^1.0.0",
    "socket.io": "^4.7.2",
    "unzipper": "^0.12.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.1",
    "nodemon": "^3.0.1"
  }
}
